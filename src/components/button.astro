---
interface Props {
  url?: string;
  target?: string;
  download?: boolean;
  id?: string;
}

const { url, target = "_self", download, id } = Astro.props;

const Component = url ? "a" : "button";
---

<Component
  href={url}
  {target}
  {id}
  {download}
  class="bg-transparent border-white rounded-full py-2 lg:py-4 px-4 lg:px-6 cursor-pointer text-white border-[2px] font-semibold text-base lg:text-xl"
>
  <slot />
</Component>
