---
interface Props {
  url?: string;
  target?: string;
  download?: boolean;
}

const { url, target = "_self", download } = Astro.props;

const Component = url ? "a" : "button";
---

<Component
  href={url}
  {target}
  {download}
  class="bg-transparent border-white rounded-full py-4 px-6 cursor-pointer text-white border-[2px] font-semibold text-xl"
>
  <slot />
</Component>
